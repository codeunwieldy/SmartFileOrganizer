<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:SmartFileOrganizer.App.Converters"
             x:Class="SmartFileOrganizer.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#6750A4</Color>

            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#FFFFFF, Dark=#121212}" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#111111, Dark=#EEEEEE}" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#FFFFFF, Dark=#FFFFFF}" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#6750A4, Dark=#7B61FF}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Padding" Value="12,10" />
            </Style>

            <!-- Converters -->
            <conv:EqualityConverter x:Key="EqualityConverter" />
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

