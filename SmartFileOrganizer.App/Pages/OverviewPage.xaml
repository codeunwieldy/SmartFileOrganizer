<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartFileOrganizer.App.Pages.OverviewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Overview">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="Where everything ended up" FontSize="20" FontAttributes="Bold" />

            <!-- Donut via MAUI Graphics -->
            <Border Padding="10" Stroke="#00000018" StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="8">
                    <Label Text="By Category" FontAttributes="Bold" />
                    <GraphicsView x:Name="Donut" HeightRequest="180" />
                </VerticalStackLayout>
            </Border>

            <!-- Mini Tree -->
            <Border Padding="10" Stroke="#00000018" StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="6">
                    <Label Text="Destination mini-map" FontAttributes="Bold" />
                    <CollectionView x:Name="Tree" />
                </VerticalStackLayout>
            </Border>

            <Button Text="Open destination folder" Clicked="OnOpenFolder" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>